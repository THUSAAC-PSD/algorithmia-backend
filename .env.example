# Application Environment (development, test, production)
APP_ENV=development

# --- Frontend URL ---
# URL of the frontend application (used for email verification links, CORS, etc.)
FRONTEND_URL=http://localhost:5173

# --- Email Verification ---
# Set to false to skip email verification in development (users are auto-verified)
# When false, the backend will return the verification code in the API response
REQUIRE_EMAIL_VERIFICATION=false

# --- Echo Server ---
PORT=":9090"
# A strong, randomly-generated secret for signing session cookies
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# --- PostgreSQL Database ---
DB_HOST=localhost
DB_PORT=5433
DB_USER=algorithmia
DB_PASSWORD=
DB_NAME=algorithmia

# --- PostgreSQL Container Environment ---
# These are used by the PostgreSQL Docker container
POSTGRES_USER=algorithmia
POSTGRES_PASSWORD=
POSTGRES_DB=algorithmia
DB_SSL_MODE=disable
DB_USE_IN_MEMORY=false

# --- Postmark Email Service ---
# Get your API token from: https://account.postmarkapp.com/servers
POSTMARK_API_TOKEN=
# Email address to send from (must be verified in Postmark)
POSTMARK_FROM_EMAIL=noreply@algorithmia.com

# --- Email (Gomail - Fallback) ---
# SMTP settings if using Gomail instead of Postmark
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SENDER=

# --- Websocket ---
WS_SKIP_TLS_VERIFICATION=true
# Comma-separated list of allowed origins for WebSocket connections
WS_ORIGIN_PATTERNS="http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000"

# --- Logger ---
# Log level can be: debug, info, warn, error, panic, fatal
LOGGEROPTIONS_LEVEL=debug
LOGGEROPTIONS_CALLERENABLED=true
