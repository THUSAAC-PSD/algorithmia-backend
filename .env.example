# Application Environment (development, test, production)
APP_ENV=development
PROJECT_NAME=algorithmia-backend
APP_NAME=Algorithmia

# --- Echo Server ---
PORT=":9090"
# A strong, randomly-generated secret for signing session cookies
SESSION_SECRET=
DEVELOPMENT=true
BASE_PATH="/api"
DEBUG_ERRORS_RESPONSE=true
IGNORE_LOG_URLS="/health,/metrics"
HTTP_TIMEOUT=30
HTTP_HOST="http://localhost"

# --- PostgreSQL Database ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=algorithmia_dev
DB_SSL_MODE=false
DB_USE_IN_MEMORY=false
DB_USE_SQLITE=false

# --- Email (Gomail) ---
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SENDER=

# --- Websocket ---
WS_SKIP_TLS_VERIFICATION=true
WS_ORIGIN_PATTERNS="http://localhost:3000,http://127.0.0.1:3000"

# --- Logger ---
# Log level can be: debug, info, warn, error, panic, fatal
LOGGEROPTIONS_LEVEL=debug
LOGGEROPTIONS_CALLERENABLED=true
